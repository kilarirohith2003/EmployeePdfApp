@model Employee
@{
    ViewData["Title"] = "Employee Details";
}
<link rel="stylesheet" href="~/css/bootstrap.min.css" /> <!-- local or CDN -->

<div class="container mt-4">
    <h2>Employee Details</h2>

    <table class="table table-bordered w-50">
        <tr><th>ID</th><td>@Model.Id</td></tr>
        <tr><th>Name</th><td>@Model.Name</td></tr>
        <tr><th>Department</th><td>@Model.Department</td></tr>
        <tr><th>Email</th><td>@Model.Email</td></tr>
        <tr><th>Salary</th><td>@Model.Salary.ToString("C")</td></tr>
    </table>

    <a asp-action="DownloadPdf" asp-route-id="@Model.Id" class="btn btn-primary">Download PDF</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
