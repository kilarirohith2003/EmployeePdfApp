@model Employee
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Employee @Model.Id – PDF</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { font-size: 12pt; }
        .doc { padding: 20px; font-family: Arial, sans-serif;}
        .header { border-bottom: 2px solid #222; padding-bottom: 8px; margin-bottom: 16px; }
        .label { color: #555; width: 140px; display:inline-block; }
        .value { font-weight:600; display:inline-block; }
        .footer { border-top: 1px solid #ddd; margin-top:24px; padding-top:8px; font-size:10pt; color:#666; }
    </style>
</head>
<body>
    <div class="doc">
        <div class="header">
            <h3 class="mb-0">Employee Details</h3>
            <small>Generated on @DateTime.Now.ToString("dd MMM yyyy HH:mm")</small>
        </div>

        <p><span class="label">Employee ID</span><span class="value">@Model.Id</span></p>
        <p><span class="label">Name</span><span class="value">@Model.Name</span></p>
        <p><span class="label">Department</span><span class="value">@Model.Department</span></p>
        <p><span class="label">Email</span><span class="value">@Model.Email</span></p>
        <p><span class="label">Salary</span><span class="value">₹ @Model.Salary.ToString("N0")</span></p>

        <div class="footer">Confidential • © @DateTime.Now.Year Your Company</div>
    </div>
</body>
</html>
